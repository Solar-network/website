{% extends 'layout.twig' %}

{% block body %}

<body data-spy="scroll" data-target="#mobile-wallet-menu" data-offset="150">

{% include "/blocks/header.twig" %}

<section class="comunity-section padding-top padding-bottom oh pos-rel">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-12">
                
{% for type, message in messages %}
	{% if (type == 'error') %}
		<div class="alert alert-danger">
			<i class="fa fa-times-circle"></i>
			{{ message }}
		</div>
	{% elseif (type == 'notice') %}
		<div class="alert alert-success">
			<i class="fa fa-check"></i>
			{{ message }}
		</div>
	{% endif %}
{% endfor %}

				<form method='post' action='/addblog?_csrf={{ csrfToken }}' enctype="multipart/form-data">
				  <div style="display:flex; flex-direction: column; justify-content:center; align-items:center;">
					<div style='border-bottom:1px solid #ccc; width:100%; margin-bottom:40px; margin-top:20px;'><h4>Create New Blog Entry</h4></div>
					<div style="width:100%; margin-bottom:10px;">
					  <label for="usernamel">Title</label>
					  <input class="form-control" type="text" placeholder="" name="title" id="title">
					</div>
					<div style="width:100%; margin-bottom:10px;">
					  <label for="usernamel">Tags</label>
					  <input data-role="tagsinput" class="form-control" type="text" placeholder="" name="tags" id="tags">
					</div>
					<div style="width:100%; margin-bottom:10px;">

						<label for="exampleFormControlFile1">Header Image</label>
						<input name="headerimage" type="file" class="form-control-file" id="exampleFormControlFile1">
    
					</div>
					<div style="width:100%; margin-bottom:10px;">
					  <label for="usernamel">Body</label>
					  <textarea name="body" id="summernote"></textarea>
					</div>
					<div style="width:80%; text-align:center;">
						<input class="button-primary" type="submit" value="Post">
					</div>

				  </div>
				</form>

			</div>
		</div>
	</div>
</section>
</body>

{% endblock %}
{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">

{% endblock %}
{% block javascripts %}

<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
     
<script>

$(document).ready(function() {

      $('#summernote').summernote({
        tabsize: 2,
        height: 200
      });
      
});
      
</script>
{% endblock %}